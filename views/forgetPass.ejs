<%- include('partials/header.ejs') -%>
<div class="dashboard forget-cont">
  <div class="forget-text">please inter your email to reset your password after submit check you email and click the link for reset</div>
  <div class="col-6 card">
         <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
         <div class="alert alert-danger"><%= el.msg %></div>
         <% }) %> <% } %> <% if (locals.messages.info) { %> <%
      messages.info.forEach( el => { %>
         <div class="alert alert-info"><%= el.msg %></div>
         <% }) %> <% } %>
      <form action="/user/forgetPass" method="post" class="forget-form">
         <label for="email">Email</label>
         <input type="email" id="email" name="email" placeholder="please inter your Email">
         <button type="submit" class="btn btn-primary" aria-label="submit mail message to change password">Submit</button>
      </form>
         <div class="otherStuff">
            <p>if have an account please go to <a href="/user/login">login</a> page if you do not have an account please <a href="/user/signup">signUp</a></p>
         </div>
  </div>
</div>
<%- include('partials/footer.ejs') -%>