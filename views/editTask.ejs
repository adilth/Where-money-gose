<%- include('partials/header.ejs') -%>
<% if (error != '') { %>
<%= error %>
<% } else { %>
<section class=" bg-image gradient-custom-3 p-5">
      <div class="mask d-flex align-items-center">
            <div class="container h-100">
                  <div class="row d-flex justify-content-center align-items-center h-100">
                        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                              <div class="card">
                                    <div class="card-body p-5">
                                          <h2 class="text-uppercase text-center mb-5 text-font">edit Spends</h2>
                                           <% if (locals.messages.errors) { %>
                                                <div class="alert alert-danger"><%= messages.errors%></div>
                                             <% } %> 
                                          <form action="/home/edit/<%=tasks[0]._id%>" method="POST">
                                                <input type="hidden" name="_method" value="PUT" />
                                                <div class="form-outline mb-4">
                                                      <label class="form-label" for="form3Example1cg">Where Spend
                                                            it</label>
                                                      <input type="text" id="form3Example1cg"
                                                            class="form-control form-control-lg" name="task"
                                                            value="<%= tasks[0].task %>" />
                                                </div>

                                                <div class="form-outline mb-4">
                                                      <label class="form-label" for="form3Example3cg">How Much</label>
                                                      <input type="number" id="form3Example3cg"
                                                            class="form-control form-control-lg" name="spend"
                                                            value="<%= tasks[0].spend %>" />
                                                </div>

                                                <div class="form-outline mb-4">
                                                      <label class="form-label" for="form3Example4cg">More Info</label>
                                                      <input type="text" id="form3Example4cg"
                                                            class="form-control form-control-lg" name="info"
                                                            value="<%= tasks[0].info %>" />
                                                </div>

                                                <div class="form-outline mb-4">
                                                      <label class="form-label" for="form3Example4cdg">Date spend
                                                            At</label>
                                                      <input type="date" id="form3Example4cdg"
                                                            class="form-control form-control-lg" name="spendAt"
                                                            value="<%= moment(tasks[0].spendAt).format("YYYY-MM-DD")%>" />
                                                </div>
                                                <p class="text-center text-muted mt-4 mb-3">Please make sure you file
                                                      all field and with current info? </p>
                                                <div class="d-flex justify-content-around">
                                                      <div class=" menu-btn">
                                                            <button type="submit"
                                                                  class="btn btn-primary btn-lg" aria-label="save the spend">Save</button>
                                                            <button type="button" aria-label="cancel the Edit" class="btn btn-primary btn-lg "
                                                                  onclick="javascript:location.href='/home';">Cancel</button>
                                                            <input type="hidden" name="menuId"
                                                                  value="<%= tasks[0]._id %>">
                                                      </div>
                                                </div>

                                          </form>

                                    </div>
                              </div>
                        </div>
                  </div>
            </div>
      </div>
</section>

<% } %>
<%- include('partials/footer.ejs') -%>